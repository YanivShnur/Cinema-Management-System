<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane minHeight="400.0" minWidth="600.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.ac.haifa.cs.sweng.cms.SuccessfulPurchaseController">
	<children>
		<BorderPane layoutY="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
			<center>
				<VBox fx:id="successfulVBox" alignment="TOP_CENTER" spacing="15.0">
					<children>
						<Text fill="ORANGE" strokeType="OUTSIDE" strokeWidth="0.0" text="Your purchase has been completed successfully">
							<font>
								<Font name="System Bold Italic" size="26.0" />
							</font>
                     <VBox.margin>
                        <Insets top="15.0" />
                     </VBox.margin>
						</Text>
                  <Text fx:id="TheaterLabel" fill="WHITE" layoutX="78.0" layoutY="38.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Theater:" translateX="-200.0">
                     <font>
                        <Font name="Symbol" size="18.0" />
                     </font>
                  </Text>
                  <Text fx:id="MovieLabel" fill="WHITE" layoutX="263.0" layoutY="127.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Movie:" translateX="-200.0">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Text>
                  <Text fx:id="NumLabel" fill="WHITE" layoutX="273.0" layoutY="177.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Num of Tickets:" translateX="-200.0" translateY="-0.0">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Text>
                  <Text fx:id="PlacesLabel" fill="#f5f5f5" layoutX="218.0" layoutY="227.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Seats:" translateX="-200.0">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Text>
					</children>
				</VBox>
			</center>
			<bottom>
				<VBox alignment="CENTER">
					<children>
						<Button minWidth="100.0" mnemonicParsing="false" onAction="#handheldsBackToMovieList" style="-fx-background-color: ORANGE; -fx-background-radius: 10;" text="OK" textAlignment="CENTER">
							<font>
								<Font name="System Bold" size="12.0" />
							</font>
							<cursor>
								<Cursor fx:constant="HAND" />
							</cursor>
							<VBox.margin>
								<Insets bottom="10.0" top="10.0" />
							</VBox.margin>
						</Button>
					</children>
				</VBox>
			</bottom>
		</BorderPane>
	</children>
</AnchorPane>
